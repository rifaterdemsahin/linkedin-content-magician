
{
    "DockerRun.DisableDockerrc": true,

    // --- GitHub Copilot ---
    "github.copilot.enable": { "*": true },
    "github.copilot.chat.enable": true,
    "github.copilot.advanced": {
        "mcp.enabled": true,
        // This setting is critical for AI-driven development.
        // It allows Copilot to execute shell commands without manual approval.
        "mcp.autoApprove": true,          // ✅ execute MCP commands automatically
        "mcp.configPath": "${workspaceFolder}/copilot-mcp.config.json"
    },

    // --- Gemini Code Assist ---
    "google.gemini.enableCodeAssist": true,
    // This setting is critical for AI-driven development.
    // It allows Gemini to execute shell commands without manual approval.
    "google.gemini.allowCommandExecution": true,  // ✅ auto-run Gemini code commands

    // --- Trust workspace so VS Code won't ask again ---
    "security.workspace.trust.enabled": false,
    "security.promptForWorkspaceTrust": false,

    // --- Optional: make terminals non-interactive ---
    "terminal.integrated.confirmOnKill": "never",

    // --- Editor & Formatting (for AI Agent consistency) ---
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },
    "files.autoSave": "onFocusChange",

    // --- File Search Exclusions (for faster AI agent searches) ---
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/dist": true
    },

    // --- ESLint Configuration ---
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ]
}